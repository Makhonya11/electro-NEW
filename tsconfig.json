{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "node",

    "strict": true,

    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,

    "types": ["node", "express"],
    "lib": ["ES2020"],

    "outDir": "dist"
  },
  "include": ["**/*.ts", "**/*.js"]
}
