

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

////////////////////
/// ENUMS
////////////////////

enum UserRole {
  USER
  ADMIN
}

enum OrderStatus {
  PENDING
  PAID
  SHIPPED
  DELIVERED
  CANCELED
}

enum PaymentStatus {
  PENDING
  SUCCEEDED
  CANCELED
}

enum PaymentProvider {
  YOOKASSA
  STRIPE
}

////////////////////
/// USER
////////////////////

model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  password  String
  name      String  
  image     String?
  phone     String?
  refreshTokenHash String?   @unique
  refreshTokenExp DateTime?  
  role      UserRole @default(USER)

  cart      Cart?
  orders    Order[]
  reviews   Review[]
  favorites Favorite[]
  addresses UserAddress[]
  payments  Payment[]
}


////////////////////
/// CART
////////////////////

model Cart {
  id          Int       @id @default(autoincrement())
  userId      Int?      @unique
  token       String?   @unique
  totalAmount Int       @default(0)

  user  User?      @relation(fields: [userId], references: [id])
  items CartItem[]
}

model CartItem {
  id        Int @id @default(autoincrement())
  cartId    Int
  cartToken String?
  productId Int
  quantity  Int @default(1)

  cart    Cart    @relation(fields: [cartId], references: [id], onDelete: Cascade)
  product Product @relation(fields: [productId], references: [id])

  @@unique([cartId, productId])
}

////////////////////
/// PRODUCT
////////////////////

model Product {
  id          Int     @id @default(autoincrement())
  name        String  @unique
  price       Int
  rating      Int?
  availability Int   @default(1)

  brandId    Int?
  categoryId Int?

  brand      Brand?    @relation(fields: [brandId], references: [id])
  category   Category? @relation(fields: [categoryId], references: [id])

  characteristics        ProductCharacteristic[]
  images      ProductImage[]
  cartItems   CartItem[]
  orderItems  OrderItem[]
  reviews     Review[]
  favorites   Favorite[]
}

model ProductCharacteristic {
  id          Int    @id @default(autoincrement())
  title       String
  description String

  product   Product @relation(fields: [productId], references: [id])
  productId Int     
}

model ProductImage {
  id        Int     @id @default(autoincrement())
  productId Int
  url       String
  isMain    Boolean @default(false)

  product Product @relation(fields: [productId], references: [id])
}

////////////////////
/// BRAND / CATEGORY
////////////////////

model Brand {
  id    Int     @id @default(autoincrement())
  name  String  @unique

  products Product[]
  types    TypeBrand[]
}

model Category {
  id    Int    @id @default(autoincrement())
  name  String @unique

  products Product[]
  brands   TypeBrand[]
}

model TypeBrand {
  id         Int @id @default(autoincrement())
  brandId    Int
  categoryId Int

  brand    Brand    @relation(fields: [brandId], references: [id])
  category Category @relation(fields: [categoryId], references: [id])

  @@unique([brandId, categoryId])
}

////////////////////
/// ORDER
////////////////////

model Order {
  id              Int         @id @default(autoincrement())
  userId          Int
  status          OrderStatus @default(PENDING)
  totalAmount     Int         @default(0)
  deliveryPrice   Int?        @default(0)
  paymentType     String      @default("cash")
  deliveryAddress String?     @default("Moscow")
  percipientName  String
  email           String?
  phone           String

  userAddressId   Int? 

  user        User         @relation(fields: [userId], references: [id])
  items       OrderItem[]
  payments    Payment[]
  userAddress UserAddress? @relation(fields: [userAddressId], references: [id])
}

model OrderItem {
  id         Int @id @default(autoincrement())
  orderId    Int
  productId  Int
  priceAtBuy Int
  quantity   Int

  order   Order   @relation(fields: [orderId], references: [id])
  product Product @relation(fields: [productId], references: [id])
}

////////////////////
/// FAVORITE / REVIEW
////////////////////

model Favorite {
  id        Int @id @default(autoincrement())
  userId    Int
  productId Int

  user    User    @relation(fields: [userId], references: [id])
  product Product @relation(fields: [productId], references: [id])

  @@unique([userId, productId])
}

model Review {
  id        Int @id @default(autoincrement())
  userId    Int
  productId Int
  rate      Int
  review    String

  user    User    @relation(fields: [userId], references: [id])
  product Product @relation(fields: [productId], references: [id])
}

////////////////////
/// ADDRESS
////////////////////

model UserAddress {
  id          Int     @id @default(autoincrement())
  userId      Int
  fullAddress String
  data        Json
  latitude    Float
  longitude   Float
  isDefault   Boolean @default(false)

  user   User   @relation(fields: [userId], references: [id])
  orders Order[]
}

////////////////////
/// PAYMENT
////////////////////

model Payment {
  id                Int            @id @default(autoincrement())
  userId            Int
  orderId           Int
  provider          PaymentProvider
  providerPaymentId String
  status            PaymentStatus
  amount            Int
  currency          String
  confirmationUrl  String
  receiptJson       Json

  user  User  @relation(fields: [userId], references: [id])
  order Order @relation(fields: [orderId], references: [id])
}